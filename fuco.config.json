{
  "name": "FUCO Production System",
  "version": "1.0.0",
  "company": "福桑聯合企業",
  "description": "企業級生產管理系統",
  "environment": "development",
  
  "features": {
    "monitoring": {
      "enabled": true,
      "gui": true,
      "realtime": true,
      "alerts": true
    },
    "reports": {
      "enabled": true,
      "exports": ["excel", "pdf", "csv"],
      "charts": true,
      "scheduler": false
    },
    "quality": {
      "enabled": true,
      "spc": false,
      "inspection": true,
      "corrective_actions": false
    },
    "equipment": {
      "enabled": true,
      "maintenance": true,
      "calibration": false,
      "iot_integration": false
    },
    "materials": {
      "enabled": false,
      "bom": false,
      "inventory": false,
      "mrp": false
    },
    "users": {
      "enabled": true,
      "ldap": false,
      "sso": false,
      "audit": true
    }
  },
  
  "modules": {
    "core": {
      "authentication": true,
      "authorization": true,
      "api": true,
      "frontend": true
    },
    "production": {
      "workstations": true,
      "work_orders": true,
      "production_records": true,
      "sop": true
    },
    "quality": {
      "quality_checks": true,
      "defect_tracking": false,
      "corrective_actions": false
    },
    "reporting": {
      "dashboard": true,
      "analytics": true,
      "exports": true,
      "scheduling": false
    }
  },
  
  "cli": {
    "version": "1.0.0",
    "commands": {
      "doctor": {
        "enabled": true,
        "checks": ["environment", "dependencies", "server", "security", "api"]
      },
      "server": {
        "enabled": true,
        "modes": ["simple", "full", "docker"]
      },
      "test": {
        "enabled": true,
        "types": ["unit", "integration", "e2e"]
      },
      "deploy": {
        "enabled": true,
        "environments": ["staging", "production"]
      }
    }
  },
  
  "paths": {
    "root": ".",
    "backend": "src/backend",
    "frontend": "src/frontend", 
    "database": "database",
    "tests": "tests",
    "logs": "logs",
    "uploads": "uploads",
    "backups": "backups",
    "templates": "templates",
    "docs": "docs"
  },
  
  "server": {
    "defaultPort": 8847,
    "defaultHost": "0.0.0.0",
    "timeout": 30000,
    "maxRequestSize": "10mb",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:8847", "http://localhost:3000"]
    },
    "rateLimit": {
      "enabled": true,
      "windowMs": 900000,
      "max": 100
    }
  },
  
  "database": {
    "type": "postgresql",
    "migrations": true,
    "seeding": true,
    "backup": true
  },
  
  "security": {
    "jwt": {
      "algorithm": "HS256",
      "expiresIn": "8h",
      "issuer": "fuco-production-system"
    },
    "encryption": {
      "algorithm": "aes-256-gcm"
    },
    "audit": {
      "enabled": true,
      "logActions": ["login", "logout", "create", "update", "delete"]
    }
  },
  
  "monitoring": {
    "enabled": true,
    "healthCheck": {
      "enabled": true,
      "interval": 30000,
      "endpoint": "/health"
    },
    "metrics": {
      "enabled": true,
      "port": 9090
    },
    "gui": {
      "enabled": true,
      "endpoint": "/monitoring-gui.html"
    }
  },
  
  "templates": {
    "enabled": true,
    "defaultTemplate": "production-module",
    "availableTemplates": [
      "production-module",
      "api-route",
      "frontend-page",
      "test-suite"
    ]
  },
  
  "development": {
    "autoReload": true,
    "showRoutes": true,
    "mockData": true,
    "verboseLogging": true,
    "devtools": {
      "enabled": true,
      "port": 8848
    }
  },
  
  "deployment": {
    "docker": {
      "enabled": true,
      "image": "fuco/production-system",
      "tag": "latest"
    },
    "zeabur": {
      "enabled": true,
      "buildCommand": "npm run build",
      "startCommand": "npm start"
    }
  },
  
  "createdAt": "2024-08-20T00:00:00.000Z",
  "updatedAt": "2024-08-20T00:00:00.000Z"
}